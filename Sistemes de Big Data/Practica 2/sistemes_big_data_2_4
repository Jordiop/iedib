      "outputs": [
        {
          "output_type": "stream",
          "name": "stdout",
          "text": [
            "Probabilitat que no hi hagi cap de defectuós: 51.2 %\n",
            "Probabilitat que n'hi hagi un o dos de defectuosos: 48.0 %\n",
            "Probabilitat que tots tres siguin defectuosos: 0.8 %\n",
            "Probabilitat que els 5 pacients millorin: 32.77 %\n",
            "Probabilitat que almenys 3 pacients millorin: 94.21 %\n"
          ]
        }
      ],
      "source": [
        "import scipy.stats as stats\n",
        "\n",
        "# 1. Productes defectuosos\n",
        "# Probabilitat que un producte sigui defectuós\n",
        "p_defectuós = 0.2\n",
        "# Nombre de productes agafats\n",
        "n_productes = 3\n",
        "\n",
        "# a) Probabilitat que no hi hagi cap producte defectuós\n",
        "p_0_defectuosos = stats.binom.pmf(0, n_productes, p_defectuós) * 100\n",
        "\n",
        "# b) Probabilitat que hi hagi un o dos productes defectuosos\n",
        "p_1_defectuós = stats.binom.pmf(1, n_productes, p_defectuós) * 100\n",
        "p_2_defectuosos = stats.binom.pmf(2, n_productes, p_defectuós) * 100\n",
        "p_1_o_2_defectuosos = p_1_defectuós + p_2_defectuosos\n",
        "\n",
        "# c) Probabilitat que tots tres productes siguin defectuosos\n",
        "p_3_defectuosos = stats.binom.pmf(3, n_productes, p_defectuós) * 100\n",
        "\n",
        "# Resultats per als productes defectuosos\n",
        "print(\"Probabilitat que no hi hagi cap de defectuós:\", round(p_0_defectuosos, 2), \"%\")\n",
        "print(\"Probabilitat que n'hi hagi un o dos de defectuosos:\", round(p_1_o_2_defectuosos, 2), \"%\")\n",
        "print(\"Probabilitat que tots tres siguin defectuosos:\", round(p_3_defectuosos, 2), \"%\")\n",
        "\n",
        "# 2. Tractament mèdic\n",
        "# Probabilitat que el tractament funcioni correctament\n",
        "p_millora = 0.8\n",
        "# Nombre de pacients\n",
        "n_pacients = 5\n",
        "\n",
        "# a) Probabilitat que tots cinc pacients millorin\n",
        "p_5_milloren = stats.binom.pmf(5, n_pacients, p_millora) * 100\n",
        "\n",
        "# b) Probabilitat que almenys tres pacients millorin\n",
        "p_3_o_mes_milloren = sum(stats.binom.pmf(k, n_pacients, p_millora) for k in range(3, 6)) * 100\n",
        "\n",
        "# Resultats per al tractament mèdic\n",
        "print(\"Probabilitat que els 5 pacients millorin:\", round(p_5_milloren, 2), \"%\")\n",
        "print(\"Probabilitat que almenys 3 pacients millorin:\", round(p_3_o_mes_milloren, 2), \"%\")"
      ]
    }
  ]
