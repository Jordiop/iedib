    {
      "cell_type": "code",
      "execution_count": 2,
      "metadata": {
        "colab": {
          "base_uri": "https://localhost:8080/"
        },
        "id": "h6hHRnjAumih",
        "outputId": "bb6016bb-934e-473c-d804-cfe0f0abc8aa"
